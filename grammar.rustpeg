    }

struct_or_union_body -> Option<Vec<Node<StructDeclaration>>> =
    "{" _ d:list1<node<struct_declaration>> _ "}" { Some(d) } /
    gnu<"{" _ "}"> { Some(Vec::new()) } /
    { None }

struct_or_union -> StructKind =
