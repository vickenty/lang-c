// Identifiers.
identifier -> Node<Identifier> = node<identifier0>

identifier0 -> Identifier =
    n:$([_a-zA-Z] [_a-zA-Z0-9]*) {?
        if !env.reserved.contains(n) {
            Ok(Identifier {
                name: n.into(),
            })
        } else {
            Err("identifier")
        }
    }

